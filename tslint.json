{
    "defaultSeverity": "error",
    "jsRules": {},
    "rules": {
        "curly": [
            true,
            "ignore-same-line"
        ],
        "interface-name": false,
        "max-classes-per-file": [
            false
        ],
        "max-line-length": [
            false
        ],
        "member-access": false,
        "member-ordering": false,
        "no-console": false,
        "no-namespace": false,
        "object-literal-sort-keys": false,
        // partial copy of eslint-config-airbnb-base/style
        "array-bracket-spacing": [
            true,
            "never"
        ],
        "block-spacing": [
            true,
            "always"
        ],
        "brace-style": [
            true,
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "eofline": true,
        "ter-func-call-spacing": [
            true,
            "never"
        ],
        "object-curly-spacing": [
            true,
            "always"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "space-in-parens": [
            true,
            "never"
        ],
        "ter-indent": [
            true,
            2,
            {
                "SwitchCase": 1
            }
        ],
        "no-implicit-dependencies": [
            true,
            "dev"
        ]
    },
    "rulesDirectory": []
}